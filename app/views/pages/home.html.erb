<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="hero-title">
          La plataforma inteligente
          <br>que potencia tu trabajo
          <br>como nutricionista
        </h1>
        <p class="hero-subtitle">
          Gestión de pacientes y planes nutricionales impulsados por IA,
          integrados en una app personalizada para cada paciente.
        </p>
        <div class="hero-buttons d-flex gap-3 justify-content-center flex-wrap">
          <% if nutritionist_signed_in? %>
            <%= link_to "Mi Dashboard", "#", class: "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Comenzar gratis", new_nutritionist_registration_path, class: "btn btn-primary btn-lg" %>
            <%= link_to "Iniciar sesión", new_nutritionist_session_path, class: "btn-outline-transparente" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Platform Overview Section -->
<section class="platform-overview-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="platform-content">
          <h2 class="platform-title gabarito-font">
            Una sola herramienta para
            <br><span class="highlight-text">gestionar, planificar y acompañar</span> a tus pacientes
            <!--<br>a tus pacientes -->
          </h2>
          <p class="platform-description">
            Con <strong>NutriHabits</strong> podrás centralizar gestión la gestión de 
            pacientes, crear plans nutricionales asistidos por IA y dar 
            acceso cliente a una app personalizada que les facilite 
            seguir su plan paso a paso.
          </p>
          <div class="platform-cta">
            <%= link_to "Empieza ahora", new_nutritionist_registration_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="platform-visual">
          <div class="platform-image">
            <%= image_tag "Photoroom.png", 
                alt: "NutriHabits Platform Preview", 
                class: "img-fluid platform-preview" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

