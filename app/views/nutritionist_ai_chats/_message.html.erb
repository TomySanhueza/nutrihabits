            <% end %>
            <% if flags["response_quality_low"] %>
              <span class="badge bg-secondary">ğŸ“‰ Calidad de respuesta baja</span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <small class="text-<%= message.role == 'user' ? 'white-50' : 'muted' %> d-block mt-1">
      <%= message.created_at.strftime('%H:%M') %>
