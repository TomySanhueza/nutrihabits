
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="card shadow-lg p-4 form-container">

    <!-- Título -->
    <h2 class="text-center mb-3 fw-bold">Registrarse</h2>

    <!-- Formulario -->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Correo electrónico",
                    input_html: { class: "form-control", autocomplete: "email" } %>
      </div>

      <div class="mb-3">
        <%= f.input :password,
                    required: true,
                    label: "Contraseña",
                    hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { class: "form-control", autocomplete: "new-password" } %>
      </div>

      <div class="mb-3">
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmar contraseña",
                    input_html: { class: "form-control", autocomplete: "new-password" } %>
      </div>

      <%= f.button :submit, "Crear cuenta", class: "btn btn-primary" %>
    <% end %>

    <!-- Divider -->
    <hr class="my-3">

    <!-- Acciones rápidas -->
    <div class="devise-links">
      <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>

