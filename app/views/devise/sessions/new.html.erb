<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="card shadow-lg p-4 form-container">

    <!-- Título -->
    <h2 class="text-center mb-3 fw-bold">Iniciar sesión</h2>

    <!-- Formulario -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Correo electrónico",
                    input_html: { class: "form-control", autocomplete: "email" } %>
      </div>

      <div class="mb-3">
        <%= f.input :password,
                    required: true,
                    label: "Contraseña",
                    input_html: { class: "form-control", autocomplete: "current-password" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start mb-3">
          <%= f.input :remember_me, as: :boolean, label: "Recuérdame" %>
        </div>
      <% end %>

      <%= f.button :submit, "Iniciar sesión", class: "btn btn-primary" %>
    <% end %>

    <!-- Divider -->
    <hr class="my-3">

    <!-- Acciones rápidas -->
    <div class="devise-links">
      <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>


