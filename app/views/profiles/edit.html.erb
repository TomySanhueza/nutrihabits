<div class="profile-card">
  <h2 class="profile-title">Editar perfil</h2>

  <%= form_with model: @profile, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :weight, "Peso (kg)", class: "form-label" %>
      <%= form.number_field :weight, step: 0.1, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :height, "Altura (cm)", class: "form-label" %>
      <%= form.number_field :height, step: 0.1, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :goals, "Objetivos", class: "form-label" %>
      <%= form.text_area :goals, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :conditions, "Condiciones", class: "form-label" %>
      <%= form.text_area :conditions, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :lifestyle, "Estilo de vida", class: "form-label" %>
      <%= form.text_area :lifestyle, class: "form-control" %>
    </div>

    <div class="profile-actions">
      <%= link_to "Cancelar", profile_path, class: "profile-btn me-2" %>
      <%= form.submit "Guardar cambios", class: "profile-btn" %>
    </div>
  <% end %>
</div>

