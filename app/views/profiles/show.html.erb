<div class="profile-card">
  <!-- Mostrar email del usuario logueado -->
  <h2 class="profile-title">
    <%= @profile.user&.email || "Usuario NutriHabits" %>
  </h2>

  <div class="profile-details">
    <p class="profile-field"><strong>Peso:</strong> <%= @profile.weight %> kg</p>
    <p class="profile-field"><strong>Altura:</strong> <%= @profile.height %> cm</p>
    <p class="profile-field"><strong>Objetivos:</strong> <%= @profile.goals %></p>
    <p class="profile-field"><strong>Condiciones:</strong> <%= @profile.conditions %></p>
    <p class="profile-field"><strong>Estilo de vida:</strong> <%= @profile.lifestyle %></p>
  </div>

  <div class="profile-actions">
    <%= link_to "Editar perfil", edit_profile_path, class: "profile-btn" %>
  </div>
</div>
