<%= form_with(model: @patient, url: @patient.persisted? ? patient_path(@patient) : patients_path, local: true) do |f| %>
  <% if @patient.errors.any? %>
    <div class="errors">
      <h3><%= pluralize(@patient.errors.count, "error") %> impidieron guardar:</h3>
      <ul>
        <% @patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Información Personal</h3>

  <div class="field">
    <%= f.label :first_name, "Nombre" %>
    <%= f.text_field :first_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Apellido" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :phone, "Teléfono" %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :user_photo, "Foto de perfil" %>
    <% if @patient.user_photo.attached? %>
      <div class="current-photo">
        <%= image_tag @patient.user_photo.variant(resize_to_limit: [100, 100]) %>
        <p>Foto actual</p>
      </div>
    <% end %>
    <%= f.file_field :user_photo %>
    <% if @patient.user_photo.attached? %>
      <small>Selecciona una nueva foto para reemplazar la actual</small>
    <% end %>
  </div>

  <h3>Perfil de Salud</h3>

  <%= f.fields_for :profile do |profile_form| %>
    <div class="field">
      <%= profile_form.label :weight, "Peso (kg)" %>
      <%= profile_form.number_field :weight, step: 0.1 %>
    </div>

    <div class="field">
      <%= profile_form.label :height, "Altura (cm)" %>
      <%= profile_form.number_field :height, step: 0.1 %>
    </div>

    <div class="field">
      <%= profile_form.label :goals, "Objetivos" %>
      <%= profile_form.text_area :goals, rows: 3 %>
    </div>

    <div class="field">
      <%= profile_form.label :conditions, "Condiciones médicas" %>
      <%= profile_form.text_area :conditions, rows: 3 %>
    </div>

    <div class="field">
      <%= profile_form.label :lifestyle, "Estilo de vida" %>
      <%= profile_form.text_area :lifestyle, rows: 3 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit @patient.persisted? ? "Actualizar Paciente" : "Crear Paciente" %>
    <%= link_to "Cancelar", @patient.persisted? ? patient_path(@patient) : patients_path %>
  </div>
<% end %>
