<div class="container my-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mi Asistente Nutricional</h1>
        <%= link_to "Nueva conversación", patient_ai_chats_path, method: :post, class: "btn btn-primary" %>
      </div>

      <% if @chats.any? %>
        <div class="list-group">
          <% @chats.each do |chat| %>
            <%= link_to patient_ai_chat_path(chat), class: "list-group-item list-group-item-action" do %>
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">
                  <%= chat.first_user_message&.content&.truncate(60) || "Nueva conversación" %>
                </h5>
                <small><%= time_ago_in_words(chat.updated_at) %> ago</small>
              </div>
              <p class="mb-1 text-muted">
                <%= chat.patient_ai_messages.count %> mensajes
              </p>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <p class="mb-0">
            Aún no tienes conversaciones. ¡Inicia una nueva para recibir apoyo personalizado con tu plan nutricional!
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
