<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <%= link_to "← Volver", meal_logs_path, class: "btn btn-outline-secondary mb-3" %>

      <div class="card">
        <% if @meal_log.photo.attached? %>
          <%= image_tag @meal_log.photo, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h3 class="card-title"><%= @meal_log.meal_type&.titleize || "Comida Registrada" %></h3>
          <p class="text-muted"><%= @meal_log.logged_at&.strftime("%d de %B de %Y a las %H:%M") %></p>

          <hr>

          <h5>Información Nutricional</h5>
          <div class="row mt-3">
            <div class="col-md-3 col-6 mb-3">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h6 class="text-muted">Calorías</h6>
                  <h4><%= @meal_log.ai_calories&.round || "N/A" %> <small>kcal</small></h4>
                </div>
              </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h6 class="text-muted">Proteína</h6>
                  <h4><%= @meal_log.ai_protein&.round(1) || "N/A" %> <small>g</small></h4>
                </div>
              </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h6 class="text-muted">Carbohidratos</h6>
                  <h4><%= @meal_log.ai_carbs&.round(1) || "N/A" %> <small>g</small></h4>
                </div>
              </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <div class="card bg-light">
                <div class="card-body text-center">
                  <h6 class="text-muted">Grasas</h6>
                  <h4><%= @meal_log.ai_fat&.round(1) || "N/A" %> <small>g</small></h4>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <h5>Evaluación Nutricional</h5>
          <div class="alert alert-info mt-3">
            <h6>Puntaje de Salud: <%= @meal_log.ai_health_score&.round(1) || "N/A" %> / 10</h6>
            <p class="mb-0"><%= @meal_log.ai_feedback %></p>
          </div>

          <div class="mt-4">
            <%= link_to "Eliminar Registro", @meal_log, method: :delete, data: { confirm: "¿Estás seguro de eliminar este registro?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
