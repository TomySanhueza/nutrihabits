<%# encoding: UTF-8 %>
<% content_for :hide_navbar, true %>
<div class="container-fluid p-0 bg-light min-vh-100">
  <div class="mx-auto bg-white shadow" style="max-width: 448px;">

    <div class="d-flex flex-column min-vh-100">

      <!-- Header -->
      <header class="p-4 position-relative bg-white border-bottom">
        <%= link_to pats_dashboard_path, class: "position-absolute start-0 top-0 mt-4 ms-3 text-dark text-decoration-none" do %>
          <i class="bi bi-arrow-left fs-4"></i>
        <% end %>
        <h1 class="fs-5 fw-semibold text-dark text-center mb-0">Análisis de tu comida</h1>
      </header>

      <!-- Main Content -->
      <main class="flex-grow-1 px-4 pb-4 pt-3">

        <!-- Health Score & Calories Card -->
        <div class="bg-white border rounded-4 p-3 mb-3 shadow-sm">
          <div class="row text-center">
            <div class="col-6 border-end">
              <p class="small text-success mb-1 fw-medium">Health Score</p>
              <p class="fs-1 fw-bold text-success mb-0">
                <%= @meal_log.ai_health_score&.round(1) || 0 %><span class="fs-5 fw-medium text-success opacity-75">/10</span>
              </p>
            </div>
            <div class="col-6">
              <p class="small text-secondary mb-1 fw-medium">Calorías Totales</p>
              <p class="fs-1 fw-bold text-dark mb-0">
                <%= @meal_log.ai_calories&.round || 0 %>
              </p>
              <p class="small text-secondary mb-0">kcal</p>
            </div>
          </div>
        </div>

        <!-- Macros Grid -->
        <div class="row g-2 mb-3">
          <div class="col-4">
            <div class="bg-white border rounded-3 p-3 text-center shadow-sm">
              <p class="small text-secondary mb-1 fw-medium">Proteína</p>
              <p class="fs-5 fw-bold text-dark mb-0"><%= @meal_log.ai_protein&.round || 0 %>g</p>
            </div>
          </div>
          <div class="col-4">
            <div class="bg-white border rounded-3 p-3 text-center shadow-sm">
              <p class="small text-secondary mb-1 fw-medium">Grasa</p>
              <p class="fs-5 fw-bold text-dark mb-0"><%= @meal_log.ai_fat&.round || 0 %>g</p>
            </div>
          </div>
          <div class="col-4">
            <div class="bg-white border rounded-3 p-3 text-center shadow-sm">
              <p class="small text-secondary mb-1 fw-medium">Carbs</p>
              <p class="fs-5 fw-bold text-dark mb-0"><%= @meal_log.ai_carbs&.round || 0 %>g</p>
            </div>
          </div>
        </div>

        <!-- Feedback Box -->
        <div class="bg-white border rounded-3 p-3 mb-3 shadow-sm">
          <p class="small text-dark mb-0 lh-base">
            <%= @meal_log.ai_feedback || "Análisis en proceso..." %>
          </p>
        </div>

        <!-- Comparison Card -->
        <% if @meal_log.ai_comparison.present? && @meal_log.ai_comparison["macronutrient_comparison"].present? %>
          <div class="bg-white border rounded-3 p-3 mb-3 shadow-sm">
            <h3 class="fs-6 fw-semibold text-dark mb-2 d-flex align-items-center gap-2">
              <i class="bi bi-arrow-left-right text-success"></i>
              Comparación con tu plan
            </h3>
            <p class="small text-dark mb-0 lh-base">
              <%= @meal_log.ai_comparison["macronutrient_comparison"] %>
            </p>
          </div>
        <% end %>

        <!-- Ingredients Analysis Card -->
        <% if @meal_log.ai_comparison.present? && @meal_log.ai_comparison["ingredient_analysis"].present? %>
          <div class="bg-white border rounded-3 p-3 mb-3 shadow-sm">
            <h3 class="fs-6 fw-semibold text-dark mb-2 d-flex align-items-center gap-2">
              <i class="bi bi-basket text-success"></i>
              Análisis de ingredientes
            </h3>
            <p class="small text-dark mb-0 lh-base">
              <%= @meal_log.ai_comparison["ingredient_analysis"] %>
            </p>
          </div>
        <% end %>

        <!-- Suggestions Card -->
        <% if @meal_log.ai_comparison.present? && @meal_log.ai_comparison["improvement_suggestion"].present? %>
          <div class="bg-white border rounded-3 p-3 mb-4 shadow-sm">
            <h3 class="fs-6 fw-semibold text-dark mb-2 d-flex align-items-center gap-2">
              <i class="bi bi-lightbulb text-success"></i>
              Sugerencias para mejorar
            </h3>
            <p class="small text-dark mb-0 lh-base">
              <%= @meal_log.ai_comparison["improvement_suggestion"] %>
            </p>
          </div>
        <% end %>

      </main>

      <!-- Sticky Footer Button -->
      <footer class="sticky-bottom bg-white border-top p-3">
        <%= link_to pats_dashboard_path, class: "btn btn-dark w-100 py-3 rounded-3 fw-semibold shadow-sm text-decoration-none d-flex align-items-center justify-content-center gap-2" do %>
          <i class="bi bi-check-circle"></i>
          Volver al Dashboard
        <% end %>
      </footer>

    </div>

  </div>
</div>
